{
  "manifest_version": 3,
  "name": "Pantheon Toolkit",
  "version": "1.0.0",
  "description": "Grab, view and download performance comparison results",
  "short_name": "Pantheon",
  "author": "gyagp",
  "homepage_url": "https://github.com/webgfx/pantheon-toolkit",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://edgeteam.ms/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://edgeteam.ms/perf-lab/perf-comparison-requests/details/*"],
      "js": ["exceljs.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pantheon Toolkit - Get Performance Results",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://edgeteam.ms/*"]
    }
  ],
  "minimum_chrome_version": "88",
  "developer": {
    "name": "gyagp",
    "url": "https://github.com/webgfx/pantheon-toolkit"
  },
  "offline_enabled": false,
  "incognito": "spanning"
}